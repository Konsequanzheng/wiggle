          "responseHeaders": {
            "entries": [
              {
                "name": "Content-Type",
                "value": "model/gltf-binary"
              },
              {
                "name": "Content-Disposition",
                "value": "inline; filename=\"model_textured.glb\""
              }
            ]
          }
        }
      },
      "id": "Respond",
      "name": "Respond to Webhook (model.glb)",
      "type": "n8n-nodes-base.respondToWebhook",
